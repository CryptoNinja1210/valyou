{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "pages/*" : ["pages/*"],
      "components/*" : ["components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx","custom.d.ts", "utils/icons.tsx", "store/types.js", "store/index.js", "components/socialMedia/index.js", "components/socialMedia/bottomSheet/index.js", "components/socialMedia/bottomSheet/BottomSheet.js", "components/videoDetailComponent"],
  "exclude": ["node_modules"]
}
